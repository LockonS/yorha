@require 'colors'
@require 'mixins'

fieldset
  padding 1rem
  border 0.1rem solid $c-weak

legend
  padding 0

label
  display block
  margin-bottom 0.5rem

box-input($color = $c-medium)
  padding 0.5rem
  font-size 1em
  border none
  outline none
  border-radius 0
  background-color $color
  color inherit
  font-family inherit
  letter-spacing inherit
  font-weight inherit

for $type in (text password url email tel search number color date month week datetime datetime-local)
  input[type={$type}]
    box-input()
textarea, select
  box-input()

button-input()
  box-input($c-weak)
  cursor pointer
  transition all 0.1s

  &:hover
    background-color $c-strong
    color $c-medium
    box-shadow 0.2em 0.2em 0.1em 0 $c-weak

  &:active
    background-color $c-medium
    color $c-strong

for $type in (submit button reset)
  button[type={$type}], input[type={$type}]
    button-input()

// These get extra styles with pseudo-elements.
button, .button
  button-input()

  // Top/bottom lines.
  position relative
  &:before
    content ''
    transition all 0.1s
    position absolute
    top 0
    bottom 0
    left 0
    right 0

  &:hover
    &:before
      top -0.2rem
      bottom -0.2rem
      border solid $c-strong
      border-width 0.1rem 0

for $placeholder in webkit-input moz ms-input
  ::-{$placeholder}-placeholder
    opacity 1
    color $c-weak
    font-weight lighter
